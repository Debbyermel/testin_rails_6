<h1>Edit article</h1>
<% if @article.errors.any? %>
  <h2> The following errors prevented the article to be saved.</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= render 'form' %>
<p>
  <%= link_to 'Return', articles_path %>
</p>